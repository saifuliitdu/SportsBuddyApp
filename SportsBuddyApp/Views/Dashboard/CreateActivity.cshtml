@using SportsBuddy.Models;
@model RecretionalActivity

@{
    ViewData["Title"] = "Create Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="panel panel-primary">
        <div class="panel-heading">
            Create Activity
        </div>
        <div class="panel-body">
            <div class="col-sm-12">
                <form asp-action="CreateActivity">
                    <input type="hidden" asp-for="ActivityId" value="@Model.ActivityId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-sm-6">

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label asp-for="ActivityName" class="control-label">Name</label>

                                <input asp-for="ActivityName" class="form-control" />

                                <span asp-validation-for="ActivityName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create Activity" />
                            </div>
                        </div>

                    </div>

                </form>
            </div>
  
        </div>
    </div>



