@model Region
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="form-horizontal">

    <div class="col-sm-8">
        <h2>Edit</h2>
        <form asp-action="EditActivity">
            <input type="hidden" asp-for="RegionId" value="@Model.RegionId" />
            <div class="form-group">
                <label asp-for="RegionName" class="control-label col-sm-2">Name</label>

                <div class="col-sm-6">
                    <input asp-for="RegionName" class="form-control" />

                    <span asp-validation-for="RegionName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2"></label>

                <div class="col-sm-6">
                    <input type="submit" style="float:left" value="Save" />
                </div>
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </div>

</div>

