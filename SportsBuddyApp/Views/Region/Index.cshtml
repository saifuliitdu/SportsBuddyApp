
@model IEnumerable<Region>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}


<div class="col-sm-8">
    <h2>Regions</h2>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>SL</th>
                <th>
                    @Html.DisplayNameFor(model => model.RegionName)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegionName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-activityId="@item.RegionId">Edit</a> |
                        <a asp-action="Delete" asp-route-activityId="@item.RegionId">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

