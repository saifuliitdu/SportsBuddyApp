<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsBuddy</title>

    <environment include="Development,Production">
        <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Mono&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/fontawesome.min.css" />
        <link rel="stylesheet" href="~/css/thisSite.css" />
        <link rel="stylesheet" href="~/css/thumbnail-gallery.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.8.1/baguetteBox.min.css">
        <link rel="stylesheet" href="~/css/uptown.css" />
        <link rel="stylesheet" href="~/css/cutoutwizApp.css" />
        <link rel="stylesheet" href="~/css/hover-min.css" />
        <link rel="stylesheet" href="~/lib/intl-tel-input/css/intlTelInput.css" />
        <link href="~/css/animate.css" rel="stylesheet" />

        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/appScript.js"></script>
        <script src="~/lib/intl-tel-input/js/intlTelInput.min.js"></script>
        <script src="~/js/toastr.min.js"></script>
    </environment>
    <!-- Hotjar Tracking Code for http://cutoutwiz.com -->
    <script>
        (function (h, o, t, j, a, r) {
            h.hj = h.hj || function () { (h.hj.q = h.hj.q || []).push(arguments) };
            h._hjSettings = { hjid: 1195437, hjsv: 6 };
            a = o.getElementsByTagName('head')[0];
            r = o.createElement('script'); r.async = 1;
            r.src = t + h._hjSettings.hjid + j + h._hjSettings.hjsv;
            a.appendChild(r);
        })(window, document, 'https://static.hotjar.com/c/hotjar-', '.js?sv=');
    </script>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="navbar-brand">Dashboard</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li><a asp-area="" asp-controller="Activity" asp-action="Index">Activity</a></li>
                    <li><a asp-area="" asp-controller="ChooseActivity" asp-action="Index">Choose An Activity</a></li>
                    <li><a asp-area="" asp-controller="Profile" asp-action="YourProfile">Profile</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content column twelve">
        <main style="margin-top:70px">
            @RenderBody()
        </main>
        <hr />
        <footer>
            <p>&copy; 2020 - Saiful</p>
        </footer>
        
    </div>

    <environment include="Development,Production">


        <script src="~/js/site.js" asp-append-version="true"></script>

    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
