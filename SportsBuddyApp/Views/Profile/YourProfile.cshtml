@model SportsBuddy.Models.ViewModel.ProfileViewModel
@using System.Linq;
@{
    ViewData["Title"] = "YourProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .side-elements label {
        margin: 0 4rem 0 0;
    }

    .intl-tel-input {
        width: 100% !important;
    }

    #pro-image {
        height: 180px;
        width: 180px;
        border-radius: 50%;
    }


    /* Original text overlay */
    .overlay-image .text {
        color: #fff;
        font-size: 30px;
        line-height: 1.5em;
        text-shadow: 2px 2px 2px #000;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 90px;
        transform: translate(-50%, -50%);
        width: 100%;
    }

    /********* Overlay on hover *******/

    /* New overlay on hover */
    .overlay-image .hover {
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
    }
    /* New overlay appearance on hover */
    .overlay-image:hover .hover {
        opacity: 1;
    }
</style>
<div class="row" style="width:100%;text-align: center;display: inline-block;margin-bottom:10%">
