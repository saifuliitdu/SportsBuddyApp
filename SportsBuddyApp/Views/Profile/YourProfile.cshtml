@model SportsBuddy.Models.ViewModel.ProfileViewModel
@using SportsBuddy.Helpers;
@{
    ViewData["Title"] = "YourProfile";
    Layout = "~/Views/Shared/_CutOutWiz.cshtml";
}
<style>
    .side-elements label {
        margin: 0 4rem 0 0;
    }

    .intl-tel-input {
        width: 100% !important;
    }

    #pro-image {
        height: 180px;
        width: 180px;
        border-radius: 50%;
    }


    /* Original text overlay */
    .overlay-image .text {
        color: #fff;
        font-size: 30px;
        line-height: 1.5em;
        text-shadow: 2px 2px 2px #000;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 90px;
        transform: translate(-50%, -50%);
        width: 100%;
    }

    /********* Overlay on hover *******/

    /* New overlay on hover */
    .overlay-image .hover {
        position: absolute;
        top: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: .5s ease;
    }
    /* New overlay appearance on hover */
    .overlay-image:hover .hover {
        opacity: 1;
    }
</style>
<div class="row" style="width:100%;text-align: center;display: inline-block;margin-bottom:10%">
    <div class="row">
        <div class="col-xs-12" style="background:#00ffcc;">
            <div class="col-xs-6">
                <div class="overlay-image" style="padding-top:2%;padding-bottom:2%;float:right">

                    @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                    {
                        <img id="pro-image" src="@Helper.GetImage(Model.ProfilePicture)" class="profile-image" width="200" height="200" style="background:white;border:2px solid white" />
                    }
                    else
                    {
                        <img id="pro-image" src="~/images/avatar2.png" class="profile-image" style="background:white;height: 100%!important" />
                    }
                    <input type="file" accept="image/*" name="files" id="imgupload" style="display:none" />
                    <div class="hover">
                        <i class="fa fa-camera image-upload-camera text" aria-hidden="true" id="camera"></i>
                    </div>
                </div>

            </div>
            <div class="col-xs-6 profile-info" style="color: #254050;text-align:left;padding-top:20px;padding-bottom:10px">
                <p style="font-size: 28px; font-weight: 600;"> @Model.Name</p>
                <p><i class="fas fa-envelope"></i> @Model.Email</p>
                <p><i class="fas fa-mobile" style="font-size: 25px;"></i> @Model.Mobile</p>
                <p style="font-size:14px;color:#048;">
                    <label class="hover-underline" style="cursor:pointer" onclick="javascript:app.hideProfile()"> Change password </label>
                </p>
            </div>
        </div>
        <div id="profile-info" class="" style="background-color: #eeffee;">
            <div class="col-xs-12" style="margin-top:25px;">
                <div class="col-xs-offset-1 col-xs-5">
                    <input type="text" class="form-control border-green" id="firstName" readonly disabled placeholder="First Name" value="@Model.FirstName" />
                </div>
                <div class="col-xs-5">
                    <input type="text" class="form-control border-green margin-15px" readonly disabled placeholder="Last Name" id="lastName" value="@Model.LastName" />
                </div>
            </div>
            <div class="col-xs-12" style="margin-top:25px">
                <div class="col-xs-offset-1 col-xs-5">
                    <input type="text" class="form-control border-green" id="user-email" placeholder="given@email.com" value="@Model.Email" readonly disabled />
                </div>
                <div class="col-xs-5">
                    <input type="tel" class="form-control border-green margin-15px" name="user-mobile" id="user-mobile" placeholder="Your Phone Number" value="@Model.Mobile" />

                </div>
            </div>
            <div class="col-xs-12" style="margin-top:25px">
                <div class="col-xs-offset-1 col-xs-5">
                    <input type="text" class="form-control border-green margin-15px" id="company-website" placeholder="Company Website" value="@Model.CompanyWebsite" />

                </div>
                <div class="col-xs-5">
                    <input type="text" class="form-control border-green margin-15px" id="company-name" placeholder="Your company Name" value="@Model.CompanyName" />
                </div>
            </div>
        </div>
        <div id="profile-pass" style="display:none;margin-top:15%">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="col-xs-6 col-xs-offset-3">
                    <input type="password" id="password" class="form-control border-green margin-15px" placeholder="Old Password" />
                </div>
                <div class="col-xs-6 col-xs-offset-3 margin-15px">
                    <input type="password" class="form-control border-green" id="newPassword" placeholder="New Password" value="" />
                </div>
                <div class="col-xs-6 col-xs-offset-3 margin-15px">
                    <input type="password" class="form-control border-green margin-15px" id="confirmPassword" placeholder="Confirm Password" />
                </div>
                <div class="col-xs-6 col-xs-offset-3 margin-15px">
                    <button id="passUpdate" class="btn form-butto" onclick="javascript: app.updatePassword()" style="display:none;float:right;text-align:center;background:#2ED3AE;height:40px;color:white;width:30%;">Update Password</button>
                </div>
            </div>
        </div>
        <div class="col-xs-12" style="margin-top:25px">
            <div class="col-xs-offset-1 col-xs-5">
            </div>
            <div class="col-xs-5">
                <label style="float:left;font-style:italic;font-size:14px;color:crimson" id="error-msg">

                </label>
                <button id="profile-update" class="btn form-butto" onclick="javascript: app.saveProfile()" style="background:#2ED3AE;float:right;height:40px;color:white;width:40%;">Update</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        if ($("#user-mobile").val() == "") {
            toastr["error"]("Please fill in all the required info.");
        }
    });
    var _URL = window.URL || window.webkitURL;
    $("#camera,.profile-image").click(function () {
        $("#imgupload").trigger('click');
    });
    $("#imgupload").change(function () {
        img = new Image();
        if ($("#imgupload")[0].files.length > 0) {
            var fileUpload = $("#imgupload").get(0);
            var files = fileUpload.files[0];
            var fileData = new FormData();
            fileData.append(files.name, files);
            $("#circle-profile").show();
            $('.second.circle').circleProgress({
                value: 1, fill: { color: '#08D7AD' }
            }).on('circle-animation-progress', function (event, progress) {
                $(this).find('strong').html(Math.round(100 * progress) + '<i>%</i>');
            });
            $.ajax({
                url: '/Profile/UploadProfilePicture',
                type: 'POST',
                contentType: false, // Not to set any content header
                processData: false,
                data: fileData,
                success: function (res) {
                    $("#pro-image").attr("src", res);
                    $("#profile-image").attr("src", res).css("width", "35px").css("height", "35px");
                    $("#circle-profile").hide();
                }, error: function () {
                    $("#circle-profile").hide();
                }
            });
        }
    });
    $(document).ready(function () {
        $("#user-mobile").intlTelInput({
            initialCountry: "auto",
            geoIpLookup: function (callback) {
                $.get("https://ipinfo.io", function () { }, "jsonp").always(function (resp) {
                    var countryCode = (resp && resp.country) ? resp.country : "";
                    callback(countryCode);
                });
            },
            utilsScript: "../lib/intl-tel-input/js/utils.js"
        });
    });
</script>